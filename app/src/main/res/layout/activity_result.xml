<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="imqsl.com.explorer.SearchActivities.ResultActivity">
    <ProgressBar
        android:id="@+id/result_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center" />
    <LinearLayout
        android:id="@+id/result_form"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/result_num"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#cccccc"
            />
<ListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/result_listview"
    >

</ListView>
    </LinearLayout>



        <include layout="@layout/result_bottom"
            android:id="@+id/bottom_resultfirst"
            />
</LinearLayout>
